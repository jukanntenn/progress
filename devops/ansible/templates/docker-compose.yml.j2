services:
  progress:
    image: jukanntenn/progress:latest
    container_name: progress
    volumes:
      - ./config.toml:/app/config.toml:ro
      - ./data:/app/data
      - ./claude_settings.json:/root/.claude/settings.json:ro
    environment:
      - PROGRESS_SCHEDULE_CRON=30 8,22 * * *
    restart: always
    ports:
      - "5053:5000"
